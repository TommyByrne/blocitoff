<div class= "row">
  <div class= "col-md-8">
    <br/>
    <h1><%= @user.name %></h1>
    <h3> Score: <%= @user.score %> </h3>
    <p>
      User score helps show productivity: <br/>
      Based on How many To-do's completed - How many To-do's Left to complete.
    </p>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="tabbable tabs-left">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#lists" data-toggle="tab">Lists  <span><%= @user.list.count %></span></a></li>
        <li><a href="#items" data-toggle="tab">To-Do's  <span><%= @user.items.count %></span></a></li>
      </ul>
      <div class="tab-content">
      <div class="tab-pane active" id="lists">
        <% @list.each do |list| %>
          <h3><%= link_to list.title, list %></h3>
        <% end %>
      </div>
      <div class="tab-pane" id="items">
        <% @items.each do |item| %>
          <h3><%= item.name.capitalize %> <small><%= item.days_left %> days left</small></h3>
        <% end %>
      </div>
    </div>
  </div>
</div>