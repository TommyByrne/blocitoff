<div class="row">
  <div class="col-md-8">
    <h1>My To-Do Lists</h1>
      <%= link_to "New List", new_list_path, class: 'btn btn-success btn-lg' %>

        <% @lists.each do |list| %>
        <h3>
          <%= link_to list.title, list %>

          <!-- <div class= "pull-right"> -->
          <small>
          <%= link_to "Delete", list, method: :delete, data: {confirm: "Are you sure you want to delete this List?"}, class: 'btn btn-danger btn-sm' %>
          </small>
          <!-- </div> -->
          <br/>
        </h3>
        <% end %>
  </div>
</div>
