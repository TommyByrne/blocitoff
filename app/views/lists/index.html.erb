<table class="table">
  <caption> <h1>My To-Do Lists<span class="pull-right"><%= link_to "New List", new_list_path, class: 'btn btn-success btn-lg' %></span></h1></caption>
  <br/>
  <tr>
    <th><h3>List</h3></th>
    <th><h3>Tasks Left</h3></th>
    <th><h3>Delete List</h3></th>
  </tr>
    <% @lists.each do |list| %>
  <tr>
   <td><h3><%= link_to list.title, list %></h3></td>
   <td><h3><%= pluralize(list.items.count, 'item') %></h3></td>
   <td align="justify"> <%= link_to "Delete", list, method: :delete, data: {confirm: "Are you sure you want to delete this List?"}, class: 'btn btn-danger btn-lg' %></td>
  </tr>
    <% end %>
</table>
