<div class="row">
  <div class="col-md-8">
    <h1><%= @list.title %></h1>
        <div class= "form-group">
          <%= link_to "Edit List", edit_list_path, class: "btn btn-success btn-xs" %>
          <%= link_to "Delete List", @list, method: :delete, class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure you want to delete this list?'} %>
        </div>
      <table class= "table table-bordered">
        <tr>
          <th>Completed</th>
          <th>Description</th>
          <th>Days Left</th>
        </tr>
      <%= render partial: 'items/form', locals: {list: @list} %>
      </table>
      <h3 class="media-heading">Things To Do</h3>
      <%= render partial: 'items/item', collection: @items %>
    </div>
</div>