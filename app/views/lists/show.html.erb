<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <h1 class="media-heading">
          <%= @list.title %>
        </h1>
        <div class= "form-group">
          <%= link_to "Edit List", edit_list_path, class: "btn btn-success" %>
          <%= link_to "Delete List", @list, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure you want to delete this list?'} %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
     <div class="col-md-8">
       <h3 class="media-heading">Itmes</h3>
        <%= render partial: 'items/item', collection: @items %>
        <%= render partial: 'items/form', locals: {list: @list} %>
    </div>
  </div>
</div>