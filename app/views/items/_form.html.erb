<% if current_user %>

<h3>Add a To-Do</h3>
<div class="row">
  <div class="col-md-8">
  <%= form_for [list, list.items.new], method: :create do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Add Item", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>
<% end %>