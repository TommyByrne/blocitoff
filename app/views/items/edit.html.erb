<h1><%= @item.name %></h1>
<div class="row">
  <div class="col-md-8">
    <%= form_for [@list, @item] do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", placeholder: "Item name" %>
      <%= f.label :duedate  %>
      <%= f. datetime_select :duedate, order: [:month, :day, :year], start_year: Date.today.year, discard_minute: true, discard_hour: true %>
    </div>
    <div class="form-group">
      <%= f.submit "Update", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>